{
  "compileOnSave": false,
  "types": [
    "selenium-webdriver",
    "protractor"
  ],  
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "jsx": "react"
  },
  "filesGlob": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./test/e2e/**/*.ts",
    "./test/e2e/**/*.tsx",
    "./typings/main.d.ts",
    "./theming/*.ts"
  ],
  "exclude": [],
  "atom": {
    "rewriteTsconfig": true
  }
}
